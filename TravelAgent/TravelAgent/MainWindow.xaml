<Window x:Class="TravelAgent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgent"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:TravelAgent.MVVM.View"
        xmlns:viewModel="clr-namespace:TravelAgent.MVVM.ViewModel"
        Title="Travel Agent" Height="600" Width="1000"
        Background="#fff"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0"
              Visibility="{Binding MenuVisibility}">
            <MenuItem Header="View">
                <MenuItem Header="Flights"/>
                <MenuItem Header="Tourist attractions"/>
                <MenuItem Header="Restoraunts"/>
                <MenuItem Header="Accomodations"/>
                <MenuItem Header="Purchased flights"/>
            </MenuItem>
            <MenuItem Header="Map"/>
            <MenuItem Header="Help"
                      Command="{Binding OpenHelpCommand}"/>
            <MenuItem Header="Logout"
                      Command="{Binding LogoutCommand}"/>
        </Menu>
        
        <ContentControl Grid.Row="1"
                        IsTabStop="False"
                        Content="{Binding NavigationService.CurrentViewModel}">
            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
                    <view:LoginView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModel:RegisterViewModel}">
                    <view:RegisterView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModel:AllFlightsViewModel}">
                    <view:AllFlightsView/>
                </DataTemplate>

            </ContentControl.Resources>

        </ContentControl>
    </Grid>
</Window>
