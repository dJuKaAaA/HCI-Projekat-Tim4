<Application x:Class="TravelAgent.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TravelAgent"
             xmlns:valueConverter="clr-namespace:TravelAgent.ValueConverter">
    <Application.Resources>

        <ResourceDictionary>

            <!-- Fonts -->
            <FontFamily x:Key="WorkSans">./Font/WorkSans-VariableFont_wght.ttf#Work Sans</FontFamily>

            <!-- Global styles -->
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontFamily" Value="{StaticResource WorkSans}"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="16"/>
            </Style>

            <!-- Colors -->
            <Color x:Key="NotFocusedTextBoxColor">#bbb</Color>
            <Color x:Key="FocusedTextBoxColor">#19d</Color>
            <Color x:Key="TextBoxFontColor">#111</Color>

            <!-- Solid brushes -->
            <SolidColorBrush x:Key="NotFocusedTextBoxBrush" Color="{StaticResource NotFocusedTextBoxColor}"/>
            <SolidColorBrush x:Key="FocusedTextBoxBrush" Color="{StaticResource FocusedTextBoxColor}"/>
            <SolidColorBrush x:Key="TextBoxFontBrush" Color="{StaticResource TextBoxFontColor}"/>

            <!-- Value converters -->
            <valueConverter:LocationValueConverter x:Key="LocationValueConverter"/>

            <!-- Themes from the 'Theme' folder -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Theme/RegisterTextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
         
    </Application.Resources>
</Application>
