<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:valueConverter="crl-namespace:TravelAgent.ValueConverter">

    <Style TargetType="ListView" x:Key="FlightsListViewTheme">

        <Style.Setters>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border HorizontalAlignment="Stretch"
                                            CornerRadius="30"
                                            Margin="20 10"
                                            Padding="30 20"
                                            BorderThickness="1"
                                            BorderBrush="#999">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Vertical"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Takeoff"
                                                               Margin="0 0 20 0"
                                                               FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding TakeoffDateTime}"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Landing"
                                                               Margin="0 0 20 0"
                                                               FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding LandingDateTime}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Grid Grid.Column="1">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0"
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding Departure.Name}"
                                                               FontWeight="SemiBold"/>
                                                    <TextBlock Text="→"
                                                               Margin="10 0"/>
                                                    <TextBlock Text="{Binding Destination.Name}"
                                                               FontWeight="SemiBold"/>

                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Price}"
                                                               HorizontalAlignment="Center"
                                                               Margin="10"
                                                               FontWeight="Bold"/>
                                                    <Button Margin="10 5">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border CornerRadius="15"
                                                                                    x:Name="CUSTOM_PART_Border"
                                                                                    Background="Orange"
                                                                                    Padding="20 10">
                                                                                <TextBlock Text="See deal →"
                                                                                           VerticalAlignment="Center"
                                                                                           HorizontalAlignment="Center"/>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="CUSTOM_PART_Border" Property="Background" Value="DarkOrange"/>
                                                                                    <Setter Property="Cursor" Value="Hand"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>

                                            </Grid>

                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style.Setters> 
        
    </Style>
    
</ResourceDictionary>