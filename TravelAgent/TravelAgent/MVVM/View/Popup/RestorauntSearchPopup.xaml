<Window x:Class="TravelAgent.MVVM.View.Popup.RestorauntSearchPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgent.MVVM.View.Popup"
        mc:Ignorable="d"
        xmlns:core="clr-namespace:TravelAgent.Core"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Title="RestorauntSearchPopup" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#fff"
                CornerRadius="20"
                BorderThickness="3"
                BorderBrush="#999"
                Grid.RowSpan="3"/>

        <Button Style="{StaticResource CloseButtonTheme}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding CloseCommand}"
                Margin="0 30 30 0"/>

        <TextBlock Text="Search restoraunts"
                   HorizontalAlignment="Center"
                   FontSize="32"
                   Grid.Row="1"
                   Margin="0 10"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Row="2"
                      Margin="20 10">
            
            <StackPanel Margin="30 10">
                <WrapPanel Margin="20 10"
                           HorizontalAlignment="Center">
                    <CheckBox Content="{Binding Source={x:Static core:RestorauntSearchType.Name}}"
                              IsChecked="{Binding IsNameChecked}"
                              Margin="10"/>
                    <CheckBox Content="{Binding Source={x:Static core:RestorauntSearchType.Address}}"
                              IsChecked="{Binding IsAddressChecked}"
                              Margin="10"/>
                    <CheckBox Content="{Binding Source={x:Static core:RestorauntSearchType.Stars}}"
                              IsChecked="{Binding IsStarsChecked}"
                              Margin="10"/>

                </WrapPanel>

                <StackPanel Margin="20 10"
                            Visibility="{Binding NameVisibility}">
                    <TextBlock Text="{Binding Source={x:Static core:RestorauntSearchType.Name}}"
                               FontSize="24"/>
                    <TextBox Text="{Binding RestorauntSearchModel.NameKeyword, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxTheme}"/>
                </StackPanel>

                <StackPanel Margin="20 10"
                            Visibility="{Binding AddressVisibility}">
                    <TextBlock Text="{Binding Source={x:Static core:RestorauntSearchType.Address}}"
                               FontSize="24"/>
                    <TextBox Text="{Binding RestorauntSearchModel.AddressKeyword, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxTheme}"/>
                </StackPanel>

                <StackPanel Margin="20 10"
                            Visibility="{Binding StarsVisibility}">
                    <TextBlock Text="{Binding Source={x:Static core:RestorauntSearchType.Stars}}"
                               FontSize="24"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Command="{Binding SelectStarsCommand}"
                                CommandParameter="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Image Source="../../../Image/Icon/star.png"/>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding RestorauntSearchModel.Stars, Converter={StaticResource GreaterThanValueConverter}, ConverterParameter=0}" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Grid.Column="1"
                                Command="{Binding SelectStarsCommand}"
                                CommandParameter="2">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Image Source="../../../Image/Icon/star.png"/>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding RestorauntSearchModel.Stars, Converter={StaticResource GreaterThanValueConverter}, ConverterParameter=1}" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Grid.Column="2"
                                Command="{Binding SelectStarsCommand}"
                                CommandParameter="3">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Image Source="../../../Image/Icon/star.png"/>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding RestorauntSearchModel.Stars, Converter={StaticResource GreaterThanValueConverter}, ConverterParameter=2}" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Grid.Column="3"
                                Command="{Binding SelectStarsCommand}"
                                CommandParameter="4">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Image Source="../../../Image/Icon/star.png"/>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding RestorauntSearchModel.Stars, Converter={StaticResource GreaterThanValueConverter}, ConverterParameter=3}" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Grid.Column="4"
                                Command="{Binding SelectStarsCommand}"
                                CommandParameter="5">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Image Source="../../../Image/Icon/star.png"/>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding RestorauntSearchModel.Stars, Converter={StaticResource GreaterThanValueConverter}, ConverterParameter=4}" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>

                <Button Style="{StaticResource FormButtonTheme}"
                        Content="Search"
                        Command="{Binding SearchCommand}"
                        Margin="0 20"
                        HorizontalAlignment="Center"/>

            </StackPanel>

        </ScrollViewer>
    </Grid>
</Window>
