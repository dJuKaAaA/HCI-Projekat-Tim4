<UserControl x:Class="TravelAgent.MVVM.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgent.MVVM.View"
             xmlns:customComponent="clr-namespace:TravelAgent.CustomComponent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="20 10">

            <StackPanel Margin="20 10">
                <TextBlock Text="Username"
                           Foreground="{StaticResource MainTextBrush}"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormTextBoxTheme}"/>
            </StackPanel>
            <StackPanel Margin="20 10">
                <TextBlock Text="Password"
                           Foreground="{StaticResource MainTextBrush}"/>
                <customComponent:BindablePasswordBox Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                     PasswordBoxStyle="{StaticResource FormPasswordBoxTheme}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0 10">

                <Button Content="Login"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Width="100"
                        Padding="0 5"
                        Command="{Binding LoginCommand}"/>
                <Button Content="Register"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Width="100"
                        Padding="0 5"
                        Command="{Binding NavigateToRegisterViewCommand}"/>

            </StackPanel>

        </StackPanel>
            
    </Grid>
</UserControl>
